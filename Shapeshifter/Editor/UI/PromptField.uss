.moonlander-prompt-field {
    flex-shrink: 1;
    margin: 0;
    margin-right: 2px;
}

.moonlander-prompt-field__icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    position: absolute;
    top: 1px;
    left: 2px;
}

.moonlander-prompt-field__placeholder {
    opacity: 0.75;
}

.moonlander-prompt-field__input {
    padding-left: 18px;
    width: 200px;
}

.moonlander-prompt-field__input > .unity-text-element {
    flex-grow: 0;
}