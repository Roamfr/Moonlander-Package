.new-conversation-button {
    -unity-text-align: middle-center;
}

.messages-container {
    border-bottom-width: 1px;
    border-left-color: rgb(32, 32, 32);
    border-right-color: rgb(32, 32, 32);
    border-top-color: rgb(32, 32, 32);
    border-bottom-color: rgb(32, 32, 32);
    background-color: var(--unity-colors-input_field-background);
    flex-grow: 1;
}

.messages-content-container {
    flex-grow: 1;
}

.message {
    padding-top: 8px;
    padding-right: 8px;
    padding-bottom: 8px;
    padding-left: 8px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
    margin-right: 8px;
    margin-left: 8px;
}

.message--user {
    background-color: var(--unity-colors-alternated_rows-background);
    margin-left: 15%;
    align-self: flex-end;
}

.message--assistant {
    background-color: var(--unity-colors-window-background);
    margin-right: 15%;
    align-self: flex-start;
}

.message__text {
    white-space: normal;
}

.message__sender-name {
    margin-bottom: 4px;
    -unity-font-style: bold;
    padding-left: 0;
}

.message__button {
    margin-top: 5px;
    margin-bottom: 5px;
    height: 30px;
}

.input-container {
    padding-top: 5px;
    flex-direction: row;
    padding-bottom: 5px;
    padding-right: 5px;
    padding-left: 5px;
    flex-shrink: 0;
    align-items: center;
}

.input-container__input-field {
    flex-grow: 1;
    flex-shrink: 1;
}

.input-container__input-field > .unity-text-field__input {
    padding-top: 5px;
    padding-bottom: 5px;
    padding-right: 5px;
    padding-left: 5px;
}

.moonlander-spinner {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.message-generating {
    flex-direction: row;
    justify-content: center;
    padding-top: 5px;
    padding-bottom: 5px;
    flex-shrink: 0;
}

.message-generating__label {
    padding-right: 5px;
}


.conversation-item {
    padding-left: 15px;
    flex-direction: row;
    align-items: center;
}

.conversation-item__name {
    flex-grow: 1;
    flex-shrink: 1;
    padding-right: 5px;
    text-overflow: ellipsis;
    overflow: hidden;
    -unity-text-align: middle-left;
}

.conversation-item__options {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    background-image: resource('icons/d__menu.png');
}

.conversation-item__options:hover {
    background-color: rgba(100, 100, 100, 0.5);
}

.empty-state {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.empty-state__message {
    -unity-text-align: middle-center;
    max-width: 500px;
    min-width: 200px;
    white-space: normal;
    padding-left: 5px;
    padding-right: 5px;
}

.empty-state__example-container {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 15px;
}

.empty-state__example {
    padding-bottom: 5px;
    padding-top: 5px;
    padding-left: 8px;
    padding-right: 8px;
    margin: 2px;
    width: 200px;
    min-height: 40px;
    white-space: normal;
    -unity-text-align: middle-center;
    border-width: 1px;
    border-radius: 4px;
    background-color: var(--unity-colors-window-background);
    border-color: var(--unity-colors-window-background);
}

.empty-state__example:hover {
    background-color: var(--unity-colors-alternated_rows-background);
}

.unity-two-pane-split-view__dragline-anchor {
    background-color: var(--unity-colors-app_toolbar_button-border);
}

.send-button {
    width: 24px;
    height: 24px;
    padding: 4px;
    border-radius: 4px;
    position: absolute;
    right: 2px;
    top: 2px;
    bottom: 0;
    flex-shrink: 0;
}

.send-button__icon {
    flex-grow: 1;
    background-image: url('project://database/Packages/com.mnlndr.moonlander/Shapeshifter/Editor/UI/Icons/d_Send.png?fileID=2800000&guid=659ad2c2c235f2144b2752d12d65b149&type=3#d_Send');
}

.send-button:hover {
    background-color: rgba(127, 127, 127, 0.25);
}

.conversations-pane-toggle__icon {
    width: 16px;
    height: 16px;
    background-image: resource('icons/d_verticalsplit.png');
}

.attach-button {
    width: 24px;
    height: 24px;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    border-bottom-left-radius: 4px;
}

.attach-button__icon {
    width: 16px;
    height: 16px;
    background-image: url('project://database/Packages/com.mnlndr.moonlander/Shapeshifter/Editor/UI/Icons/d_AttachGenerators.png?fileID=2800000&guid=ddb453b216a4f6945bdff198e7ad3aea&type=3#d_AttachGenerators');
}

.attach-button:hover {
    background-color: rgba(127, 127, 127, 0.25);
}

.attach-button--attached {
    background-color: rgba(127, 127, 127, 0.4);
}

.attach-button--attached > .attach-button__icon {
    background-image: url('project://database/Packages/com.mnlndr.moonlander/Shapeshifter/Editor/UI/Icons/d_DettachGenerators.png?fileID=2800000&guid=a72f205146a662742a7e2b2a234d21a9&type=3#d_DettachGenerators');
}
