.moonlander-layer-stack-preview {
    min-height: 50px;
}

.moonlander-layer-stack-preview__preview {
    width: 128px;
    height: 128px;
}

.moonlander-layer-stack-preview__size {
    position: absolute;
    bottom: 0;
    left: 0;
    opacity: 0.5;
    min-height: auto;
    width: 125px;
}

.moonlander-layer-stack-preview__size:hover {
    opacity: 1;
}

.moonlander-layer-stack-preview__container {
    background-color: rgb(49, 49, 49);
    flex-grow: 1;
}

.moonlander-layer-stack-preview__split {
    flex-grow: 1;
    justify-content: center;
}

.moonlander-layer-stack-preview__preview-container {
    flex-direction: row;
    justify-content: space-around;
}

.moonlander-layer-stack-preview__auto-update .unity-toggle__checkmark {
    width: 16px;
    height: 16px;
    background-image: resource('icons/d_refresh.png');
}

.moonlander-layer-stack-preview__split-toggle .unity-toggle__checkmark {
    width: 16px;
    height: 16px;
    background-image: resource('icons/d_verticalsplit.png');
}

.moonlander-layer-stack-preview__global-toggle .unity-toggle__checkmark {
    width: 16px;
    height: 16px;
    background-image: resource('icons/d_toolhandleglobal.png');
}

.moonlander-layer-stack-preview__normal-toggle .unity-toggle__checkmark {
    width: 16px;
    height: 16px;
}


.moonlander-layer-stack-preview__header-label {
    flex-grow: 1;
    -unity-font-style: bold;
    -unity-text-align: middle-left;
    padding-left: 5px;
}

.moonlander-layer-stack-preview__position .unity-float-field {
    width: 50px;
}

.moonlander-layer-stack-preview__preview-target {
    position: absolute;
    opacity: 0.5;
    -unity-font-style: bold;
    text-shadow: 2px 2px 0 rgb(0, 0, 0);
}

.moonlander-layer-stack-preview__preview-item {
    align-items: center;
}
